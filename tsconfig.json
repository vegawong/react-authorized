{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "src",
        "alwaysStrict": true,
        "allowJs": false,
        "importHelpers": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "./typings"],
        "lib": [
            "es5",
            "es2015.core",
            "es2015.reflect",
            "es2015.promise",
            "es2015.generator",
            "es2016.array.include",
            "dom"
        ]
    },
    "exclude": ["**/node_modules/*"],

    "awesomeTypescriptLoaderOptions": {
        "reportFiles": ["src/**/*.{ts,tsx}"]
    }
}
